<form class="flexcol" autocomplete="off">
    <header style="display: grid; grid-template-rows: min-content min-content min-content; row-gap: 10px;">
        <div class="hkFlex" style="column-gap: 5px; align-items: center;">
            <img src="{{item.img}}" data-edit="img" height="100px" width="100px" style="object-fit: contain;"/>
            <input class="noBord" type="text" name="name" value="{{item.name}}" style="max-width: 300px;"/>
        </div>

        <div class="hkFlex" style="column-gap: 15px; align-items: center;">

            <div style="display: grid; justify-items: center;">
                <span>{{localize "Rank"}} 1</span>
                <input type="checkbox" name="system.Rank1" style="width: 20px; height: 20px; margin: 0;" {{#if item.system.Rank1}}checked{{/if}}/>
            </div>

            <div style="display: grid; justify-items: center;">
                <span>{{localize "Rank"}} 2</span>
                <input type="checkbox" name="system.Rank2" style="width: 20px; height: 20px; margin: 0;" {{#if item.system.Rank2}}checked{{/if}} {{#unless item.system.Rank1}}disabled{{/unless}}/>
            </div>

            <div style="display: grid; justify-items: center;">
                <span>{{localize "Rank"}} 3</span>
                <input type="checkbox" name="system.Rank3" style="width: 20px; height: 20px; margin: 0;" {{#if item.system.Rank3}}checked{{/if}} {{#unless item.system.Rank2}}disabled{{/unless}}/>
            </div>

            <div style="display: grid; justify-items: center;">
                <span>{{localize "Is martial?"}}</span>
                <input type="checkbox" name="system.IsMartial" style="width: 20px; height: 20px; margin: 0;" {{#if item.system.IsMartial}}checked{{/if}}/>
            </div>

            <div style="display: grid; justify-items: center;">
                <span>{{localize "Is mystic?"}}</span>
                <input type="checkbox" name="system.IsMystic" style="width: 20px; height: 20px; margin: 0;" {{#if item.system.IsMystic}}checked{{/if}}/>
            </div>
        </div>

        <textarea class="desc" name="system.Description" value="{{item.system.Description}}" placeholder="{{localize "Enter description here..."}}">{{item.system.Description}}</textarea>
    </header>
</form>