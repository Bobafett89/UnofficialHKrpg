<form class="flexcol" autocomplete="off">
    <header style="display: grid; grid-template-rows: 100px 100px 200px; row-gap: 10px;">
        <div class="hkFlex" style="column-gap: 5px; align-items: center;">
            <img src="{{item.img}}" data-edit="img" height="100px" width="100px" style="object-fit: contain;"/>
            <input class="noBord" type="text" name="name" value="{{item.name}}" style="max-width: 300px;"/>
        </div>

        <div class="hkFlex" style="column-gap: 15px;">
            <div style="display: grid; justify-items: center;">
                <span>Damage</span>
                <input type="text" name="system.Damage" value="{{item.system.Damage}}" style="max-width: 40px;"/>
            </div>

            <div style="display: grid; justify-items: center;">
                <span>Quality</span>
                <input type="text" name="system.Quality" value="{{item.system.Quality}}" style="max-width: 40px;"/>
            </div>
            
            <div style="display: grid; justify-items: center;">
                <span>Range</span>
                <input type="text" name="system.Range" value="{{item.system.Range}}" style="max-width: 40px;"/>
            </div>

            <div style="display: grid; justify-items: center;">
                <span>Handedness</span>
                <input type="text" name="system.Hands" value="{{item.system.Hands}}" style="max-width: 40px;"/>
            </div>

            <div style="display: grid; justify-items: center;">
                <span>Type</span>
                <input type="text" name="system.Type" value="{{item.system.Type}}" style="max-width: 75px;"/>
            </div>

            <div style="display: grid; justify-items: center;">
                <span>Bulk</span>
                <input type="text" name="system.Bulk" value="{{item.system.Bulk}}" style="max-width: 40px;"/>
            </div>

            <div style="display: grid; justify-items: center;">
                <span>Cost</span>
                <input type="text" name="system.Cost" value="{{item.system.Cost}}" style="max-width: 40px;"/>
            </div>
        </div>

        <textarea class="desc" name="system.Description" value="{{item.system.Description}}" placeholder="Enter description here...">{{item.system.Description}}</textarea>
    </header>
</form>