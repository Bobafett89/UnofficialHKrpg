        <span class="ItemListItem ItemListBorder">{{item.system.Bulk}}</span>
        {{/each}}

        {{#each actor.itemTypes.Poison as |item|}}
        <span class="ItemListItem hkOpenSheet" data-itemid="{{item.id}}">{{item.name}}</span>
        <span class="ItemListItem ItemListBorder">{{#if item.system.Belt}}<i class="fa-solid fa-square-check"></i>{{else}}<i class="fa-regular fa-square"></i>{{/if}}</span>
        <span class="ItemListItem ItemListBorder">{{item.system.Bulk}}</span>
        {{/each}}

        {{#each actor.itemTypes.Trap as |item|}}
        <span class="ItemListItem hkOpenSheet" data-itemid="{{item.id}}">{{item.name}}</span>
        <span class="ItemListItem ItemListBorder">{{#if item.system.Belt}}<i class="fa-solid fa-square-check"></i>{{else}}<i class="fa-regular fa-square"></i>{{/if}}</span>
        <span class="ItemListItem ItemListBorder">{{item.system.Bulk}}</span>
        {{/each}}

        {{#each actor.itemTypes.Tool as |item|}}
        <span class="ItemListItem hkOpenSheet" data-itemid="{{item.id}}">{{item.name}}</span>
        <span class="ItemListItem ItemListBorder">{{#if item.system.Belt}}<i class="fa-solid fa-square-check"></i>{{else}}<i class="fa-regular fa-square"></i>{{/if}}</span>
        <span class="ItemListItem ItemListBorder">{{item.system.Bulk}}</span>
        {{/each}}

        {{#each actor.itemTypes.Other as |item|}}
        <span class="ItemListItem hkOpenSheet" data-itemid="{{item.id}}">{{item.name}}</span>
        <span class="ItemListItem ItemListBorder">{{#if item.system.Belt}}<i class="fa-solid fa-square-check"></i>{{else}}<i class="fa-regular fa-square"></i>{{/if}}</span>
        <span class="ItemListItem ItemListBorder">{{item.system.Bulk}}</span>
        {{/each}}
    </div>

    <div class="CharmList">
        <span class="ItemListItem ItemListHeader" style="grid-column: 1/2; font-size: 17px;">{{localize "Charms"}}</span>
        <span class="ItemListItem ItemListHeader" style="grid-column: 2/3; font-size: 11px;">{{localize "Attuned"}}</span>
        <span class="ItemListItem ItemListHeader" style="grid-column: 3/4; font-size: 11px;">{{localize "Notches"}}: <input type="text" name="system.OtherAttr.Notches" value="{{actor.system.OtherAttr.Notches}}" style="height: 15px; width: 20px;"></span>

        {{#each actor.itemTypes.Charm as |item|}}
        <span class="ItemListItem hkOpenSheet" data-itemid="{{item.id}}">{{item.name}}</span>
        <span class="ItemListItem ItemListBorder">{{#if item.system.Attuned}}<i class="fa-solid fa-square-check"></i>{{else}}<i class="fa-regular fa-square"></i>{{/if}}</span>
        <span class="ItemListItem ItemListBorder">{{item.system.Notches}}</span>
        {{/each}}
    </div>
</div>

<div class="hkFlex" style="align-items: center; grid-area: c; column-gap: 50px;">
    <div class="hkFlex" style="align-items: center; column-gap: 5px;">
        <span>{{localize "Currency"}}:</span>
        <input type="text" name="system.Other.Geo" value="{{actor.system.Other.Geo}}" style="max-width: 100px;"/>
    </div>

    <div class="hkFlex" style="align-items: center; column-gap: 5px;">
        <span>{{localize "Total bulk"}}:</span>
        <input type="text" name="system.Other.Bulk" value="{{actor.system.Other.Bulk}}" style="width: 26px;"/>
        <span>{{localize "out of"}}</span>
        <div style="display: grid; margin-bottom: 18px; justify-items: center;">
            <span>{{localize "Load"}}</span>
            <input type="text" name="system.Attr.Load" value="{{actor.system.Attr.Load}}" style="width: 26px;"/>
        </div>
    </div>
</div>